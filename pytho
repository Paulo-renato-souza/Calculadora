# Função para adição
def add(x, y):
   return x + y

# Função para subtração
def subtract(x, y):
   return x - y

# Função para multiplicação
def multiply(x, y):
   return x * y

# Função para divisão
def divide(x, y):
   return x / y

# Menu para o usuário
print("Selecione a operação desejada:")
print("1 - Adição")
print("2 - Subtração")
print("3 - Multiplicação")
print("4 - Divisão")

# Solicita ao usuário a seleção da operação desejada
choice = input("Digite sua escolha (1/2/3/4): ")

# Solicita ao usuário os valores para os cálculos
num1 = int(input("Digite o primeiro número: "))
num2 = int(input("Digite o segundo número: "))

# Executa a operação selecionada pelo usuário
if choice == '1':
   print(num1,"+",num2,"=", add(num1,num2))

elif choice == '2':
   print(num1,"-",num2,"=", subtract(num1,num2))

elif choice == '3':
   print(num1,"*",num2,"=", multiply(num1,num2))

elif choice == '4':
   print(num1,"/",num2,"=", divide(num1,num2))
else:
   print("Opção inválida. Tente novamente.")
